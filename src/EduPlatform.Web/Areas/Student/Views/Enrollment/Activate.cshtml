@{
    ViewData["Title"] = "تفعيل كود الاشتراك";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg" style="border-radius: 15px;">
                <div class="card-header bg-primary text-white text-center" style="border-radius: 15px 15px 0 0;">
                    <h4>تفعيل كود الاشتراك</h4>
                </div>
                <div class="card-body p-4">

                    <!-- عرض رسائل النجاح أو الخطأ -->
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">@TempData["Success"]</div>
                    }

                    <form asp-action="Activate" method="post">
                        <div class="form-group mb-3">
                            <label for="code" class="form-label">أدخل كود الاشتراك</label>
                            <input type="text" class="form-control form-control-lg text-center" id="code" name="code" placeholder="XXXX-XXXX-XXXX" required style="letter-spacing: 2px;">
                        </div>
                        <button type="submit" class="btn btn-primary w-100 btn-lg" style="background-color: #003366;">
                            <i class="fas fa-check-circle me-2"></i> تفعيل الآن
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>