@model EduPlatform.Web.ViewModels.Student.CourseDetailsViewModel

@{
    ViewData["Title"] = Model.CourseTitle;
}

<div class="container-fluid fade-in">
    <!-- Course Header -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h2 class="mb-3">@Model.CourseTitle</h2>
                    <p class="text-muted mb-3">@Model.CourseDescription</p>

                    <div class="d-flex align-items-center mb-3">
                        <div class="rounded-circle bg-primary bg-opacity-10 p-2 me-2">
                            <i class="fas fa-chalkboard-teacher text-primary"></i>
                        </div>
                        <span>@Model.InstructorName</span>
                    </div>

                    <div class="row g-3">
                        <div class="col-auto">
                            <small class="text-muted d-block">تاريخ الاشتراك</small>
                            <span>@Model.EnrolledAt.ToString("yyyy/MM/dd")</span>
                        </div>
                        <div class="col-auto">
                            <small class="text-muted d-block">تاريخ الانتهاء</small>
                            <span class="@(Model.ExpiresAt < DateTime.Now ? "text-danger" : "")">
                                @Model.ExpiresAt.ToString("yyyy/MM/dd")
                            </span>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card bg-light">
                        <div class="card-body text-center">
                            <h3 class="mb-3">@Model.ProgressPercentage%</h3>
                            <div class="progress mb-2" style="height: 10px;">
                                <div class="progress-bar bg-success"
                                     style="width: @Model.ProgressPercentage%;"
                                     role="progressbar"></div>
                            </div>
                            <p class="small text-muted mb-0">
                                <i class="fas fa-video me-1"></i>
                                @Model.WatchedVideos / @Model.TotalVideos فيديو
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Chapters and Videos -->
    <div class="accordion" id="chaptersAccordion">
        @for (int i = 0; i < Model.Chapters.Count; i++)
        {
            var chapter = Model.Chapters[i];
            <div class="accordion-item mb-3 border-0 shadow-sm">
                <h2 class="accordion-header" id="heading@(i)">
                    <button class="accordion-button @(i > 0 ? "collapsed" : "")"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#collapse@(i)">
                        <div class="d-flex align-items-center">
                            <span class="badge bg-primary rounded-circle p-2 me-2">@(i + 1)</span>
                            <span class="fw-bold">@chapter.Title</span>
                            <span class="badge bg-light text-dark ms-3">
                                @chapter.Videos.Count فيديو
                            </span>
                        </div>
                    </button>
                </h2>

                <div id="collapse@(i)"
                     class="accordion-collapse collapse @(i == 0 ? "show" : "")"
                     data-bs-parent="#chaptersAccordion">
                    <div class="accordion-body p-0">
                        <div class="list-group list-group-flush">
                            @foreach (var video in chapter.Videos.OrderBy(v => v.Order))
                            {
                                <a asp-action="WatchVideo" asp-route-id="@video.VideoId"
                                   class="list-group-item list-group-item-action d-flex align-items-center @(video.IsLocked ? "disabled text-muted" : "")">

                                    <div class="position-relative me-3">
                                        <img src="@video.ThumbnailUrl"
                                             alt="@video.Title"
                                             style="width: 120px; height: 68px; object-fit: cover;"
                                             class="rounded">

                                        @if (video.IsLocked)
                                        {
                                            <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-50 rounded d-flex align-items-center justify-content-center">
                                                <i class="fas fa-lock text-white"></i>
                                            </div>
                                        }
                                        else if (video.IsWatched)
                                        {
                                            <div class="position-absolute top-0 start-0 w-100 h-100 bg-success bg-opacity-25 rounded d-flex align-items-center justify-content-center">
                                                <i class="fas fa-check-circle text-success fa-2x"></i>
                                            </div>
                                        }
                                    </div>

                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">@video.Title</h6>
                                        <small class="text-muted">
                                            <i class="fas fa-clock me-1"></i>
                                            @TimeSpan.FromSeconds(video.DurationSeconds).ToString(@"mm\:ss")

                                            @if (video.HasQuiz)
                                            {
                                                <span class="ms-3">
                                                    <i class="fas fa-question-circle text-primary me-1"></i>
                                                    اختبار
                                                </span>
                                            }
                                        </small>
                                    </div>

                                    <i class="fas fa-play-circle fa-2x @(video.IsLocked ? "text-secondary" : "text-primary")"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .accordion-button:not(.collapsed) {
        background-color: #f8f9fa;
        color: var(--primary-color);
    }

    .list-group-item.disabled {
        opacity: 0.6;
        pointer-events: none;
    }

    .list-group-item:hover {
        background-color: #f8f9fa;
    }
</style>@*
