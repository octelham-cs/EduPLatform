@model EduPlatform.Core.Entities.Course

@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>@Model.Title</h2>
            <p class="text-muted">@Model.Subject.Name - السعر: @Model.Price جنيه</p>
        </div>
        <a asp-action="Index" class="btn btn-secondary">العودة للكورسات</a>
    </div>

    <div class="row">
        <!-- قسم الفصول -->
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">الفصول والمحتوى</h5>
                </div>
                <div class="card-body">
                    @if (Model.Chapters.Any())
                    {
                        foreach (var chapter in Model.Chapters.OrderBy(c => c.Order))
                        {
                            <div class="mb-4">
                                <h5 class="border-bottom pb-2">
                                    <i class="bi bi-folder"></i> @chapter.Title
                                </h5>

                                @if (chapter.Videos.Any())
                                {
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>الفيديو</th>
                                                <th>الحالة</th>
                                                <th>الإجراءات</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var video in chapter.Videos.OrderBy(v => v.Order))
                                            {
                                                <tr>
                                                    <td>
                                                        @video.Title
                                                        @if (video.IsHidden)
                                                        {
                                                            <span class="badge bg-secondary">مخفي</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        <span class="badge @(video.IsHidden ? "bg-warning" : "bg-success")">
                                                            @(video.IsHidden ? "مخفي" : "ظاهر")
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <form asp-action="HideVideo" method="post" class="d-inline">
                                                            <input type="hidden" name="id" value="@video.Id" />
                                                            <input type="hidden" name="courseId" value="@Model.Id" />
                                                            <button type="submit" class="btn btn-sm @(video.IsHidden ? "btn-success" : "btn-warning")">
                                                                @(video.IsHidden ? "إظهار" : "إخفاء")
                                                            </button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                }
                                else
                                {
                                    <p class="text-muted">لا توجد فيديوهات في هذا الفصل</p>
                                }

                                <!-- نموذج إضافة فيديو -->
                                <div class="mt-3">
                                    <button class="btn btn-sm btn-outline-primary"
                                            type="button"
                                            data-bs-toggle="collapse"
                                            data-bs-target="#addVideo-@chapter.Id">
                                        إضافة فيديو
                                    </button>
                                    <div class="collapse mt-2" id="addVideo-@chapter.Id">
                                        <form asp-action="AddVideo" method="post" class="border p-3 bg-light">
                                            <input type="hidden" name="CourseId" value="@Model.Id" />
                                            <input type="hidden" name="ChapterId" value="@chapter.Id" />

                                            <div class="mb-2">
                                                <input type="text" name="Title" class="form-control"
                                                       placeholder="عنوان الفيديو" required />
                                            </div>
                                            <div class="mb-2">
                                                <input type="url" name="YouTubeUrl" class="form-control"
                                                       placeholder="رابط يوتيوب" required />
                                            </div>
                                            <div class="mb-2">
                                                <input type="number" name="Order" class="form-control"
                                                       placeholder="الترتيب" value="0" />
                                            </div>
                                            <button type="submit" class="btn btn-primary btn-sm">إضافة</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-center text-muted">لم تقم بإضافة أي فصول بعد</p>
                    }
                </div>
            </div>
        </div>

        <!-- قسم إضافة فصل -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">إضافة فصل جديد</h5>
                </div>
                <div class="card-body">
                    <form asp-action="AddChapter" method="post">
                        <input type="hidden" name="CourseId" value="@Model.Id" />

                        <div class="mb-3">
                            <label class="form-label">عنوان الفصل</label>
                            <input type="text" name="Title" class="form-control"
                                   placeholder="مثال: الباب الأول" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">وصف الفصل (اختياري)</label>
                            <textarea name="Description" class="form-control" rows="2"></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">الترتيب</label>
                            <input type="number" name="Order" class="form-control" value="0" />
                        </div>

                        <button type="submit" class="btn btn-primary w-100">إضافة الفصل</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>