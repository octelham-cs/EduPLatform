@model IEnumerable<EduPlatform.Core.Entities.Course>

@{
    ViewData["Title"] = "كورساتي";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>كورساتي</h2>

       

        <a href="/Instructor/Course/Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>
            إضافة كورس جديد
        </a>


    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var course in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@course.Title</h5>
                            <p class="card-text text-muted">@course.Description</p>
                            <p class="card-text">
                                <strong>المادة:</strong> @course.Subject.Name
                            </p>
                            <p class="card-text">
                                <strong>السعر:</strong> @course.Price جنيه
                            </p>
                        </div>
                        <div class="card-footer">
                            <span class="badge @(course.IsActive ? "bg-success" : "bg-secondary")">
                                @(course.IsActive ? "نشط" : "غير نشط")
                            </span>
                            <a asp-action="Details" asp-route-id="@course.Id"
                               class="btn btn-primary btn-sm float-end">
                                إدارة المحتوى
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <h5>لم تقم بإنشاء أي كورسات بعد</h5>
            <p>ابدأ بإنشاء كورسك الأول الآن!</p>


           

            <a href="/Instructor/Course/Create" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i>
                إنشاء كورس جديد
            </a>

        </div>
    }
</div>