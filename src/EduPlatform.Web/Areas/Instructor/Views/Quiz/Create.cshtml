@model EduPlatform.Web.ViewModels.Instructor.CreateQuizViewModel
@{
    ViewData["Title"] = "إنشاء اختبار جديد";
}

<div class="container mt-4">
    <h2>إنشاء اختبار جديد</h2>
    <form asp-action="Create" method="post">
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">عنوان الاختبار</label>
                    <input asp-for="Title" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">الكورس</label>
                    <select asp-for="CourseId" asp-items="Model.Courses" class="form-select"></select>
                </div>
                <div class="row">
                    <div class="col-6">
                        <label class="form-label">الوقت (دقائق)</label>
                        <input asp-for="TimeLimit" class="form-control" value="10" />
                    </div>
                    <div class="col-6">
                        <label class="form-label">درجة النجاح %</label>
                        <input asp-for="PassingScore" class="form-control" value="60" />
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <label class="form-label">اختر الأسئلة:</label>
                <div class="border p-3" style="max-height: 400px; overflow-y: auto;">
                    @foreach (var q in Model.AvailableQuestions)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="SelectedQuestionIds" value="@q.Id" id="q_@q.Id">
                            <label class="form-check-label" for="q_@q.Id">
                                @q.QuestionText <small class="text-muted">(@q.SubjectName)</small>
                            </label>
                        </div>
                    }
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary mt-3">حفظ الاختبار</button>
    </form>
</div>