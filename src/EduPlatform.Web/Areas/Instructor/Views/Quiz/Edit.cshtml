@model EduPlatform.Web.ViewModels.Instructor.CreateQuizViewModel
@{
    ViewData["Title"] = "تعديل الاختبار";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Header -->
            <div class="d-flex align-items-center mb-4">
                <a href="/Instructor/Quiz" class="btn btn-outline-secondary me-3">
                    <i class="fas fa-arrow-right"></i>
                </a>
                <div>
                    <h2 class="mb-1">
                        <i class="fas fa-edit text-primary ms-2"></i>
                        تعديل الاختبار
                    </h2>
                    <p class="text-muted mb-0">تعديل بيانات الاختبار والأسئلة</p>
                </div>
            </div>

            <div class="card shadow border-0">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-tasks text-primary me-2"></i>
                        بيانات الاختبار
                    </h5>
                </div>

                <div class="card-body p-4">
                    <form action="/Instructor/Quiz/Edit" method="post" id="quizForm">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-heading text-primary me-1"></i>
                                    عنوان الاختبار
                                </label>
                                <input asp-for="Title" class="form-control form-control-lg" required />
                                <span asp-validation-for="Title" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-book text-primary me-1"></i>
                                    الكورس
                                </label>
                                <select asp-for="CourseId" asp-items="Model.Courses" class="form-select form-select-lg" required>
                                    <option value="">-- اختر الكورس --</option>
                                </select>
                                <span asp-validation-for="CourseId" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-4">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-clock text-primary me-1"></i>
                                    الوقت (بالدقائق)
                                </label>
                                <input asp-for="TimeLimit" type="number" min="1" max="180" class="form-control" required />
                                <span asp-validation-for="TimeLimit" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-percent text-primary me-1"></i>
                                    درجة النجاح
                                </label>
                                <div class="input-group">
                                    <input asp-for="PassingScore" type="number" min="1" max="100" class="form-control" required />
                                    <span class="input-group-text bg-light">%</span>
                                </div>
                                <span asp-validation-for="PassingScore" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-tag text-primary me-1"></i>
                                    نوع الاختبار
                                </label>
                                <select asp-for="Type" class="form-select" required>
                                    <option value="Progress">اختبار تقدم</option>
                                    <option value="Assessment">اختبار تقييمي</option>
                                </select>
                                <span asp-validation-for="Type" class="text-danger small"></span>
                            </div>
                        </div>

                        <hr class="my-4" />

                        <div class="mb-4">
                            <label class="form-label fw-bold">
                                <i class="fas fa-question-circle text-primary me-1"></i>
                                اختر الأسئلة
                            </label>
                            <div class="border rounded p-3" style="max-height: 400px; overflow-y: auto;">
                                @if (Model.AvailableQuestions != null && Model.AvailableQuestions.Any())
                                {
                                    @foreach (var q in Model.AvailableQuestions)
                                    {
                                        <div class="form-check mb-2">
                                            <input class="form-check-input" type="checkbox"
                                                   name="SelectedQuestionIds" value="@q.Id"
                                                   id="q_@q.Id"
                                                   @(Model.SelectedQuestionIds.Contains(q.Id) ? "checked" : "")>
                                            <label class="form-check-label" for="q_@q.Id">
                                                @q.QuestionText
                                                <small class="text-muted d-block">@q.SubjectName</small>
                                            </label>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p class="text-muted text-center py-3">
                                        <i class="fas fa-info-circle me-1"></i>
                                        لا توجد أسئلة متاحة. أضف أسئلة أولاً من بنك الأسئلة.
                                    </p>
                                }
                            </div>
                            <small class="text-muted">
                                <i class="fas fa-info-circle me-1"></i>
                                اختر سؤالاً واحداً أو أكثر للاختبار
                            </small>
                        </div>

                        <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                            <a href="/Instructor/Quiz" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-arrow-right me-2"></i>
                                رجوع
                            </a>

                            <button type="submit" class="btn btn-primary btn-lg px-5">
                                <i class="fas fa-save me-2"></i>
                                حفظ التعديلات
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}