@using EduPlatform.Core.Enums
@model IEnumerable<EduPlatform.Core.Entities.Question>
@{
    ViewData["Title"] = "بنك الأسئلة";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 style="color: #003366;">📚 بنك الأسئلة</h2>
        <a asp-action="Create" class="btn btn-primary" style="background-color: #003366;">
            <i class="fas fa-plus"></i> إضافة سؤال جديد
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th>السؤال</th>
                    <th>المادة</th>
                    <th>النوع</th>
                    <th>الصعوبة</th>
                    <th>تاريخ الإضافة</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.QuestionText</td>
                        <td>@item.Subject?.Name</td>
                        <td>
                            @if (item.Type == QuestionType.MultipleChoice)
                            {
                                <span class="badge bg-info text-dark">اختيار من متعدد</span>
                            }
                            else
                            {

                                <span class="badge bg-secondary">صح وخطأ</span>
                            }
                        </td>
                        <td>
                            @for (int i = 0; i < item.DifficultyLevel; i++)
                            {
                                <span>⭐</span>
                            }
                        </td>
                        <td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>