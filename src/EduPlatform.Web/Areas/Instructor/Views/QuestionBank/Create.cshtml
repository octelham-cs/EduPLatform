                        <i class="fas fa-arrow-right"></i>
                    </a>
                    <div>
                        <h2 class="mb-1">
                            <i class="fas fa-plus-circle text-primary ms-2"></i>
                            إضافة سؤال جديد
                        </h2>
                        <p class="text-muted mb-0">أضف سؤالاً إلى بنك الأسئلة</p>
                    </div>
                </div>

                <form action="/Instructor/QuestionBank/Create" method="post" id="questionForm">
                    @Html.AntiForgeryToken()

                    <div class="card border-0 shadow-sm">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-question-circle ms-2"></i>بيانات السؤال</h5>
                        </div>

                        <div class="card-body p-4">

                            <!-- Error Messages -->
                            @if (!ViewData.ModelState.IsValid)
                            {
                                <div class="alert alert-danger">
                                    <i class="fas fa-exclamation-circle ms-2"></i>
                                    يرجى تصحيح الأخطاء التالية:
                                    <ul class="mb-0 mt-2">
                                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                        {
                                            <li>@error.ErrorMessage</li>
                                        }
                                    </ul>
                                </div>
                            }

                            <!-- Question Type -->
                            <div class="mb-4">
                                <label for="QuestionType" class="form-label">
                                    <i class="fas fa-list-ul text-primary ms-2"></i>
                                    نوع السؤال <span class="text-danger">*</span>
                                </label>
                                <select class="form-select form-select-lg" id="questionTypeSelect" name="QuestionType" required>
                                    <option value="">-- اختر نوع السؤال --</option>
                                    <option value="MultipleChoice">اختيار من متعدد</option>
                                    <option value="MultipleSelect">اختيارات متعددة</option>
                                    <option value="TrueFalse">صح/خطأ</option>
                                    <option value="FillInTheBlanks">إكمال الفراغات</option>
                                </select>
                                <span class="text-danger">@Html.ValidationMessageFor(m => m.QuestionType)</span>
                            </div>

                            <hr>

                            <!-- Question Text -->
                            <div class="mb-4">
                                <label for="QuestionText" class="form-label">
                                    <i class="fas fa-question-circle text-primary ms-2"></i>
                                    نص السؤال <span class="text-danger">*</span>
                                </label>
                                <textarea class="form-control" id="QuestionText" name="QuestionText"
                                          rows="4" placeholder="اكتب السؤال هنا..." required>@Model?.QuestionText</textarea>
                                <span class="text-danger">@Html.ValidationMessageFor(m => m.QuestionText)</span>
                            </div>

                            <!-- Options Area (dynamically loaded) -->
                            <div id="optionsArea"></div>

                            <hr>

                            <!-- Subject and Chapter -->
                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <label for="SubjectId" class="form-label">
                                        <i class="fas fa-book text-primary ms-2"></i>
                                        المادة <span class="text-danger">*</span>
                                    </label>
                                    <select class="form-select" id="SubjectId" name="SubjectId" required>
                                        <option value="">-- اختر المادة --</option>
                                        @if (ViewBag.Subjects != null)
                                        {
                                            foreach (var subject in ViewBag.Subjects)
                                            {
                                                <option value="@subject.Value">@subject.Text</option>
                                            }
                                        }
                                    </select>
                                    <span class="text-danger">@Html.ValidationMessageFor(m => m.SubjectId)</span>
                                </div>

                                <div class="col-md-6">
                                    <label for="ChapterId" class="form-label">
                                        <i class="fas fa-book-open text-primary ms-2"></i>
                                        الفصل (اختياري)
                                    </label>
                                    <select class="form-select" id="ChapterId" name="ChapterId">
                                        <option value="">-- اختر الفصل --</option>
                                        @if (ViewBag.Chapters != null)
                                        {
                                            foreach (var chapter in ViewBag.Chapters)
                                            {
                                                <option value="@chapter.Value">@chapter.Text</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>

                            <!-- Difficulty Level -->
                            <div class="mb-4">
                                <label for="DifficultyLevel" class="form-label">
                                    <i class="fas fa-chart-line text-primary ms-2"></i>
                                    مستوى الصعوبة
                                </label>
                                <div class="d-flex align-items-center gap-3">
                                    <input type="range" class="form-range" id="difficultyRange"
                                           name="DifficultyLevel" min="1" max="5" value="3" style="width: 70%;">
                                    <div class="difficulty-display">
                                        <span id="difficultyStars">
