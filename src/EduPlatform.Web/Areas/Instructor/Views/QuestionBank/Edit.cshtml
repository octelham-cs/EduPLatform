@model EduPlatform.Web.ViewModels.Instructor.AddQuestionViewModel
@{
    ViewData["Title"] = "تعديل السؤال";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow border-0">
                <div class="card-header bg-gradient-warning text-dark py-3">
                    <h4 class="mb-0">
                        <i class="fas fa-edit me-2"></i>
                        تعديل السؤال
                    </h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Edit" method="post" id="questionForm">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="row">
                            <div class="col-lg-8">
                                <div class="mb-4">
                                    <label asp-for="QuestionType" class="form-label fw-bold">
                                        <i class="fas fa-list text-primary me-1"></i>
                                        نوع السؤال
                                    </label>
                                    <select asp-for="QuestionType" class="form-select form-select-lg" id="questionType" required>
                                        <option value="MultipleChoice" selected="@(Model.QuestionType == "MultipleChoice")">اختيار من متعدد</option>
                                        <option value="TrueFalse" selected="@(Model.QuestionType == "TrueFalse")">صح / خطأ</option>
                                        <option value="MultipleSelect" selected="@(Model.QuestionType == "MultipleSelect")">اختيارات متعددة</option>
                                    </select>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="QuestionText" class="form-label fw-bold">
                                        <i class="fas fa-pen text-primary me-1"></i>
                                        نص السؤال
                                    </label>
                                    <textarea asp-for="QuestionText" class="form-control" rows="3" required></textarea>
                                    <span asp-validation-for="QuestionText" class="text-danger small"></span>
                                </div>

                                <!-- اختيارات للاختيار من متعدد -->
                                <div id="multipleChoiceSection" style="display: @((Model.QuestionType == "MultipleChoice" || Model.QuestionType == "MultipleSelect") ? "block" : "none");">
                                    <label class="form-label fw-bold">
                                        <i class="fas fa-list-ul text-info me-1"></i>
                                        الاختيارات
                                    </label>

                                    @for (int i = 0; i < Model.Options.Count && i < 4; i++)
                                    {
                                        <div class="input-group mb-2">
                                            <div class="input-group-text">
                                                <input type="radio" name="CorrectAnswerIndex" value="@i"
                                                       class="form-check-input" checked="@(i == 0)" />
                                            </div>
                                            <input type="text" name="Options[@i]" class="form-control"
                                                   value="@Model.Options[i]" placeholder="الاختيار @(i + 1)" />
                                            <span class="input-group-text bg-light">صحيح</span>
                                        </div>
                                    }
                                </div>

                                <!-- صح / خطأ -->
                                <div id="trueFalseSection" style="display: @(Model.QuestionType == "TrueFalse" ? "block" : "none");">
                                    <label class="form-label fw-bold">
                                        <i class="fas fa-check-circle text-success me-1"></i>
                                        الإجابة الصحيحة
                                    </label>
                                    <div class="btn-group w-100" role="group">
                                        <input type="radio" class="btn-check" name="CorrectAnswerBool"
                                               id="trueAnswer" value="true" checked="@Model.CorrectAnswerBool" />
                                        <label class="btn btn-outline-success btn-lg" for="trueAnswer">
                                            <i class="fas fa-check me-2"></i> صح
                                        </label>

                                        <input type="radio" class="btn-check" name="CorrectAnswerBool"
                                               id="falseAnswer" value="false" checked="@(!Model.CorrectAnswerBool)" />
                                        <label class="btn btn-outline-danger btn-lg" for="falseAnswer">
                                            <i class="fas fa-times me-2"></i> خطأ
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-4">
                                <div class="card bg-light border-0">
                                    <div class="card-body">
                                        <h6 class="fw-bold mb-3">
                                            <i class="fas fa-cog me-2"></i>
                                            إعدادات السؤال
                                        </h6>

                                        <div class="mb-3">
                                            <label asp-for="SubjectId" class="form-label">المادة</label>
                                            <select asp-for="SubjectId" class="form-select" required>
                                                <option value="">-- اختر --</option>
                                                @if (ViewBag.Subjects != null)
                                                {
                                                    @foreach (var subject in ViewBag.Subjects)
                                                    {
                                                        <option value="@subject.Value" selected="@(subject.Value.ToString() == Model.SubjectId.ToString())">
                                                            @subject.Text
                                                        </option>
                                                    }
                                                }
                                            </select>
                                        </div>

                                        <div class="mb-3">
                                            <label asp-for="ChapterId" class="form-label">الفصل</label>
                                            <select asp-for="ChapterId" class="form-select">
                                                <option value="">-- بدون --</option>
                                                @if (ViewBag.Chapters != null)
                                                {
                                                    @foreach (var chapter in ViewBag.Chapters)
                                                    {
                                                        <option value="@chapter.Value" selected="@(chapter.Value.ToString() == Model.ChapterId?.ToString())">
                                                            @chapter.Text
                                                        </option>
                                                    }
                                                }
                                            </select>
                                        </div>

                                        <div class="mb-3">
                                            <label asp-for="DifficultyLevel" class="form-label">مستوى الصعوبة</label>
                                            <div class="d-flex gap-1">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    <button type="button" class="btn @(i <= Model.DifficultyLevel ? "btn-warning" : "btn-outline-warning") difficulty-btn"
                                                            data-value="@i">
                                                        <i class="fas fa-star"></i>
                                                    </button>
                                                }
                                            </div>
                                            <input asp-for="DifficultyLevel" type="hidden" value="@Model.DifficultyLevel" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4" />

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-arrow-right me-2"></i>
                                رجوع
                            </a>

                            <button type="submit" class="btn btn-warning btn-lg px-5">
                                <i class="fas fa-save me-2"></i>
                                حفظ التعديلات
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // تغيير نوع السؤال
            $('#questionType').change(function() {
                var type = $(this).val();
                if (type === 'MultipleChoice' || type === 'MultipleSelect') {
                    $('#multipleChoiceSection').show();
                    $('#trueFalseSection').hide();
                } else if (type === 'TrueFalse') {
                    $('#multipleChoiceSection').hide();
                    $('#trueFalseSection').show();
                }
            });

            // مستوى الصعوبة
            $('.difficulty-btn').click(function() {
                var value = $(this).data('value');
                $('#DifficultyLevel').val(value);
                $('.difficulty-btn').each(function(i) {
                    if (i < value) {
                        $(this).removeClass('btn-outline-warning').addClass('btn-warning');
                    } else {
                        $(this).removeClass('btn-warning').addClass('btn-outline-warning');
                    }
                });
            });
        });
    </script>
}