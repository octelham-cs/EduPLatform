@model List<EduPlatform.Web.ViewModels.Admin.BranchListViewModel>

@{
    ViewData["Title"] = "إدارة الشعب الدراسية";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid fade-in">
    <!-- عنوان الصفحة -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">
            <i class="fas fa-code-branch text-primary ms-2"></i>
            إدارة الشعب الدراسية
        </h1>
        <a href="@Url.Action("Create", "Branch", new { area = "Admin" })" class="btn btn-primary">
            <i class="fas fa-plus ms-2"></i>
            إضافة شعبة جديدة
        </a>
    </div>

    <!-- قسم البحث -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="fas fa-search text-muted"></i>
                        </span>
                        <input type="text" class="form-control border-start-0 ps-0"
                               name="searchTerm" value="@ViewBag.SearchTerm"
                               placeholder="ابحث باسم الشعبة..." />
                    </div>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search ms-2"></i> بحث
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- جدول الشعب -->
    <div class="card shadow-sm">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <div class="mb-3">
                        <i class="fas fa-code-branch fa-4x text-muted opacity-50"></i>
                    </div>
                    <h5 class="text-muted mb-3">لا توجد شعب دراسية حتى الآن</h5>
                    <a href="@Url.Action("Create", "Branch", new { area = "Admin" })" class="btn btn-primary">
                        <i class="fas fa-plus ms-2"></i>
                        إضافة أول شعبة
                    </a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>الشعبة</th>
                                <th>الحالة</th>
                                <th>المواد</th>
                                <th>الطلاب</th>
                                <th>الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int counter = ((ViewBag.CurrentPage - 1) * 10) + 1;
                            }
                            @foreach (var branch in Model)
                            {
                                <tr data-status="@(branch.IsActive ? "Active" : "Inactive")">
                                    <td>@(counter++)</td>
                                    <td>
                                        <div class="fw-bold">@branch.Name</div>
                                        @if (!string.IsNullOrEmpty(branch.NameEn))
                                        {
                                            <small class="text-muted">@branch.NameEn</small>
                                        }
                                    </td>
                                    <td>
                                        @if (branch.IsActive)
                                        {
                                            <span class="badge bg-success">نشط</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">غير نشط</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@branch.SubjectsCount</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">@branch.StudentsCount</span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group" style="gap: 5px;">
                                            <!-- زر التفاصيل -->
                                            <a href="@Url.Action("Details", "Branch", new { area = "Admin", id = branch.Id })"
                                               class="btn btn-sm btn-outline-info" title="تفاصيل">
                                                <i class="fas fa-eye"></i>
                                            </a>

                                            <!-- زر التعديل -->
                                            <a href="@Url.Action("Edit", "Branch", new { area = "Admin", id = branch.Id })"
                                               class="btn btn-sm btn-outline-warning" title="تعديل">
                                                <i class="fas fa-edit"></i>
                                            </a>

                                            <!-- زر تغيير الحالة (تفعيل/تعطيل) -->
                                            <button type="button" class="btn btn-sm @(branch.IsActive ? "btn-outline-danger" : "btn-outline-success")"
                                                    onclick="toggleStatus(@branch.Id)"
                                                    title="@(branch.IsActive ? "تعطيل" : "تفعيل")">
                                                <i class="fas @(branch.IsActive ? "fa-ban" : "fa-check")"></i>
                                            </button>

                                            <!-- زر الحذف -->
                                            <button type="button" class="btn btn-sm btn-outline-danger"
                                                    onclick="deleteBranch(@branch.Id, '@branch.Name')"
                                                    title="حذف">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                if (ViewBag.TotalPages > 1)
                {
                    <nav class="mt-4">
                        <ul class="pagination justify-content-center">
                            @for (int i = 1; i <= ViewBag.TotalPages; i++)
                            {
                                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="?page=@i&searchTerm=@ViewBag.SearchTerm">@i</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function() {
            // فلترة حسب الحالة (اختياري - لو عاوز تضيف فلتر)
            @if (TempData["Success"] != null)
            {
                    <text>
                    Swal.fire({
                        icon: 'success',
                        title: 'تم',
                        text: '@TempData["Success"]',
                        timer: 3000,
                        showConfirmButton: false
                    });
                    </text>
            }
        });

        function toggleStatus(id) {
            Swal.fire({
                title: 'تأكيد',
                text: 'هل أنت متأكد من تغيير حالة الشعبة؟',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'نعم',
                cancelButtonText: 'إلغاء'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('/Admin/Branch/ToggleStatus/' + id)
                        .done(function(response) {
                            if (response.success) {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'تم',
                                    text: response.message,
                                    timer: 2000,
                                    showConfirmButton: false
                                }).then(() => location.reload());
                            } else {
                                Swal.fire('خطأ', response.message, 'error');
                            }
                        })
                        .fail(function() {
                            Swal.fire('خطأ', 'حدث خطأ في الاتصال', 'error');
                        });
                }
            });
        }

        function deleteBranch(id, name) {
            Swal.fire({
                title: 'تأكيد الحذف',
                html: `هل أنت متأكد من حذف الشعبة <strong>${name}</strong>؟`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'نعم، احذف',
                cancelButtonText: 'إلغاء'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('/Admin/Branch/Delete/' + id)
                        .done(function(response) {
                            if (response.success) {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'تم الحذف',
                                    text: response.message,
                                    timer: 2000,
                                    showConfirmButton: false
                                }).then(() => location.reload());
                            } else {
                                Swal.fire('خطأ', response.message, 'error');
                            }
                        })
                        .fail(function() {
                            Swal.fire('خطأ', 'حدث خطأ في الاتصال', 'error');
                        });
                }
            });
        }
    </script>
}