@model EduPlatform.Web.ViewModels.Admin.BranchEditViewModel

@{
    ViewData["Title"] = "تعديل الشعبة";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid fade-in">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- بطاقة تعديل الشعبة -->
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-edit text-warning ms-2"></i>
                        تعديل الشعبة: @Model.Name
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <!-- الاسم بالعربية -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold"></label>
                            <input asp-for="Name" class="form-control" placeholder="أدخل اسم الشعبة بالعربية" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <!-- الاسم بالإنجليزية -->
                        <div class="mb-3">
                            <label asp-for="NameEn" class="form-label fw-bold"></label>
                            <input asp-for="NameEn" class="form-control" placeholder="Enter branch name in English" />
                            <span asp-validation-for="NameEn" class="text-danger small"></span>
                        </div>

                        <!-- الحالة -->
                        <div class="mb-4">
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input" />
                                <label asp-for="IsActive" class="form-check-label fw-bold">
                                    الشعبة نشطة
                                </label>
                            </div>
                        </div>

                        <hr />

                        <!-- أزرار التحكم - بالطريقة المطلوبة -->
                        <div class="d-flex justify-content-between">
                            <!-- زر الرجوع - باستخدام Url.Action -->
                            <a href="@Url.Action("Index", "Branch", new { area = "Admin" })" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-right ms-2"></i>
                                رجوع
                            </a>

                            <!-- زر الحفظ -->
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save ms-2"></i>
                                حفظ التعديلات
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- بطاقة مساعدة (اختياري) -->
            <div class="card shadow-sm mt-3 bg-light">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="fas fa-info-circle text-primary fa-2x"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="fw-bold mb-1">ملاحظات:</h6>
                            <p class="text-muted small mb-0">
                                <i class="fas fa-check-circle text-success me-1"></i>
                                الاسم بالعربية مطلوب، والإنجليزي اختياري.
                                <br>
                                <i class="fas fa-check-circle text-success me-1"></i>
                                يمكنك تعطيل الشعبة إذا لم تعد مستخدمة.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function() {
            // إظهار رسالة نجاح لو في TempData
            @if (TempData["Success"] != null)
            {
                    <text>
                    Swal.fire({
                        icon: 'success',
                        title: 'تم',
                        text: '@TempData["Success"]',
                        timer: 3000,
                        showConfirmButton: false
                    });
                    </text>
            }

            // إظهار رسالة خطأ لو في TempData
            @if (TempData["Error"] != null)
            {
                    <text>
                    Swal.fire({
                        icon: 'error',
                        title: 'خطأ',
                        text: '@TempData["Error"]',
                        timer: 3000,
                        showConfirmButton: false
                    });
                    </text>
            }
        });
    </script>
}