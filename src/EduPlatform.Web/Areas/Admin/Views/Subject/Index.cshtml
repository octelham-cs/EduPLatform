@model List<EduPlatform.Web.ViewModels.Admin.SubjectListViewModel>

@{
    ViewData["Title"] = "إدارة المواد";
    // هنضيف مسار الـ Layout الرئيسي
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid fade-in">
    <!-- عنوان الصفحة -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">
            <i class="fas fa-book-open text-primary me-2"></i>
            إدارة المواد
        </h1>


        <a href="@Url.Action("Create", "Subject", new { area = "Admin" })" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>
            إضافة مادة جديدة
        </a>


    </div>

    <!-- قسم البحث -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="fas fa-search text-muted"></i>
                        </span>
                        <input type="text" class="form-control border-start-0 ps-0"
                               name="searchTerm" value="@ViewBag.SearchTerm"
                               placeholder="ابحث باسم المادة..." />
                    </div>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search me-2"></i>بحث
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- جدول المواد -->
    <div class="card shadow-sm">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <div class="mb-3">
                        <i class="fas fa-book-open fa-4x text-muted opacity-50"></i>
                    </div>
                    <h5 class="text-muted mb-3">لا توجد مواد مضافة حتى الآن</h5>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>
                        إضافة أول مادة
                    </a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>المادة</th>
                                <th>المستوى</th>
                                <th>الشعبة</th>
                                <th>الحالة</th>
                                <th>المدرسين</th>
                                <th>الكورسات</th>
                                <th>الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int counter = ((ViewBag.CurrentPage - 1) * 10) + 1;
                            }
                            @foreach (var subject in Model)
                            {
                                <tr>
                                    <td>@(counter++)</td>
                                    <td>
                                        <div class="fw-bold">@subject.Name</div>
                                        @if (!string.IsNullOrEmpty(subject.NameEn))
                                        {
                                            <small class="text-muted">@subject.NameEn</small>
                                        }
                                    </td>
                                    <td>@subject.GradeLevel</td>
                                    <td>@subject.Branch</td>
                                    <td>
                                        @if (subject.IsActive)
                                        {
                                            <span class="badge bg-success">نشط</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">غير نشط</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@subject.InstructorsCount</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">@subject.CoursesCount</span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">



                                            <a href="@Url.Action("Details", "Subject", new { area = "Admin", id = subject.Id })"
                                               class="btn btn-sm btn-outline-info" title="تفاصيل">
                                                <i class="fas fa-eye"></i>
                                            </a>

                                            <a href="@Url.Action("Edit", "Subject", new { area = "Admin", id = subject.Id })"
                                               class="btn btn-sm btn-outline-warning" title="تعديل">
                                                <i class="fas fa-edit"></i>
                                            </a>




                                            <button type="button" class="btn btn-sm btn-outline-success"
                                                    onclick="toggleStatus(@subject.Id)" title="@(subject.IsActive ? "تعطيل" : "تفعيل")">
                                                <i class="fas @(subject.IsActive ? "fa-ban" : "fa-check")"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-danger"
                                                    onclick="deleteSubject(@subject.Id, '@subject.Name')" title="حذف">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                if (ViewBag.TotalPages > 1)
                {
                    <nav class="mt-4">
                        <ul class="pagination justify-content-center">
                            @for (int i = 1; i <= ViewBag.TotalPages; i++)
                            {
                                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="?page=@i&searchTerm=@ViewBag.SearchTerm">@i</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleStatus(id) {
            Swal.fire({
                title: 'تأكيد',
                text: 'هل أنت متأكد من تغيير حالة المادة؟',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'نعم',
                cancelButtonText: 'إلغاء'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('/Admin/Subject/ToggleStatus/' + id)
                        .done(function(response) {
                            if (response.success) {
                                Swal.fire('تم', response.message, 'success')
                                    .then(() => location.reload());
                            } else {
                                Swal.fire('خطأ', response.message, 'error');
                            }
                        })
                        .fail(function() {
                            Swal.fire('خطأ', 'حدث خطأ في الاتصال', 'error');
                        });
                }
            });
        }

        function deleteSubject(id, name) {
            Swal.fire({
                title: 'تأكيد الحذف',
                html: `هل أنت متأكد من حذف المادة <strong>${name}</strong>؟`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'نعم، احذف',
                cancelButtonText: 'إلغاء'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('/Admin/Subject/Delete/' + id)
                        .done(function(response) {
                            if (response.success) {
                                Swal.fire('تم الحذف', response.message, 'success')
                                    .then(() => location.reload());
                            } else {
                                Swal.fire('خطأ', response.message, 'error');
                            }
                        })
                        .fail(function() {
                            Swal.fire('خطأ', 'حدث خطأ في الاتصال', 'error');
                        });
                }
            });
        }

        @if (TempData["Success"] != null)
        {
                <text>
                $(document).ready(function() {
                    Swal.fire('تم', '@TempData["Success"]', 'success');
                });
                </text>
        }
    </script>
}