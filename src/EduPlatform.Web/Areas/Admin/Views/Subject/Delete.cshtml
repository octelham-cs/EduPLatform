@model EduPlatform.Web.ViewModels.Admin.SubjectDetailsViewModel

@{
    ViewData["Title"] = "تفاصيل المادة";
}

<div class="container-fluid fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-book-open text-primary me-2"></i>
            تفاصيل المادة
        </h2>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                <i class="fas fa-edit me-1"></i> تعديل
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-right me-1"></i> العودة
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body text-center">
                    <div class="rounded-circle bg-primary bg-opacity-10 p-4 d-inline-block mb-3">
                        <i class="fas fa-book-open fa-4x text-primary"></i>
                    </div>
                    <h4>@Model.Name</h4>
                    @if (!string.IsNullOrEmpty(Model.NameEn))
                    {
                        <p class="text-muted">@Model.NameEn</p>
                    }

                    <div class="d-flex justify-content-center gap-2 mb-3">
                        <span class="badge bg-info">@Model.GradeLevel</span>
                        <span class="badge bg-secondary">@Model.Branch</span>
                    </div>

                    <div class="mt-3">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success p-2">نشط</span>
                        }
                        else
                        {
                            <span class="badge bg-danger p-2">غير نشط</span>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-chalkboard-teacher me-2"></i>
                        المدرسين (@Model.Instructors.Count)
                    </h5>
                </div>
                <div class="card-body">
                    @if (!Model.Instructors.Any())
                    {
                        <p class="text-muted text-center">لا يوجد مدرسين لهذه المادة</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>المدرس</th>
                                        <th>البريد الإلكتروني</th>
                                        <th>عدد الطلاب</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var instructor in Model.Instructors)
                                    {
                                        <tr>
                                            <td>@instructor.Name</td>
                                            <td>@instructor.Email</td>
                                            <td>@instructor.StudentsCount</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-video me-2"></i>
                        الكورسات (@Model.Courses.Count)
                    </h5>
                </div>
                <div class="card-body">
                    @if (!Model.Courses.Any())
                    {
                        <p class="text-muted text-center">لا يوجد كورسات لهذه المادة</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>الكورس</th>
                                        <th>المدرس</th>
                                        <th>السعر</th>
                                        <th>عدد الطلاب</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var course in Model.Courses)
                                    {
                                        <tr>
                                            <td>@course.Title</td>
                                            <td>@course.InstructorName</td>
                                            <td>@course.Price.ToString("N0") ج.م</td>
                                            <td>@course.StudentsCount</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>