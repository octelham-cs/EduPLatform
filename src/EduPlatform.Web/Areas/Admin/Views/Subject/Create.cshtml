@model EduPlatform.Web.ViewModels.Admin.SubjectCreateViewModel

@{
    ViewData["Title"] = "إضافة مادة جديدة";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid fade-in">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-plus-circle text-primary ms-2"></i>
                        إضافة مادة جديدة
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold"></label>
                            <input asp-for="Name" class="form-control" placeholder="مثال: اللغة العربية" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NameEn" class="form-label fw-bold"></label>
                            <input asp-for="NameEn" class="form-control" placeholder="Example: Arabic Language" />
                            <span asp-validation-for="NameEn" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="GradeLevelId" class="form-label fw-bold"></label>
                            <select asp-for="GradeLevelId" class="form-select">
                                <option value="">-- اختر المستوى --</option>
                                @foreach (var level in Model.GradeLevels)
                                {
                                    <option value="@level.Id">@level.Name</option>
                                }
                            </select>
                            <span asp-validation-for="GradeLevelId" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="BranchId" class="form-label fw-bold"></label>
                            <select asp-for="BranchId" class="form-select">
                                <option value="">-- عام (بدون شعبة) --</option>
                                @foreach (var branch in Model.Branches)
                                {
                                    <option value="@branch.Id">@branch.Name</option>
                                }
                            </select>
                            <span asp-validation-for="BranchId" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input" checked />
                                <label asp-for="IsActive" class="form-check-label fw-bold">
                                    المادة نشطة
                                </label>
                            </div>
                        </div>

                        <hr />
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index", "Subject", new { area = "Admin" })" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-right ms-2"></i> رجوع
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save ms-2"></i> حفظ
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}