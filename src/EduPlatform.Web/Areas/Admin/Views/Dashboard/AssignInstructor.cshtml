@model IEnumerable<EduPlatform.Core.Entities.ApplicationUser>

@{
    ViewData["Title"] = "تعيين مدرس جديد";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <h2 class="mb-4">تعيين مدرس جديد</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">اختر مستخدم لتعيينه كمدرس</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>الاسم</th>
                            <th>البريد الإلكتروني</th>
                            <th>رقم الهاتف</th>
                            <th>تاريخ التسجيل</th>
                            <th>الإجراء</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.FullName</td>
                                <td>@user.Email</td>
                                <td>@user.PhoneNumber</td>
                                <td>@user.CreatedAt.ToString("yyyy/MM/dd")</td>
                                <td>
                                    <button type="button" class="btn btn-success btn-sm"
                                            data-bs-toggle="modal"
                                            data-bs-target="#assignModal-@user.Id">
                                        تعيين كمدرس
                                    </button>

                                    <!-- Modal -->
                                    <div class="modal fade" id="assignModal-@user.Id" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">تعيين @user.FullName كمدرس</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <form asp-action="AssignInstructor" method="post">
                                                    <div class="modal-body">
                                                        <input type="hidden" name="userId" value="@user.Id" />

                                                        <div class="mb-3">
                                                            <label class="form-label">نبذة عن المدرس (اختياري)</label>
                                                            <textarea name="bio" class="form-control" rows="3"
                                                              placeholder="مثال: مدرس لغة عربية خبرة 10 سنوات"></textarea>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                                                        <button type="submit" class="btn btn-success">تأكيد التعيين</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <h5>لا يوجد مستخدمين جدد</h5>
                    <p class="mb-0">جميع المستخدمين المسجلين تم تعيينهم بالفعل كمرسين.</p>
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">العودة للوحة التحكم</a>
    </div>
</div>