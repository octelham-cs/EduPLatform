@using EduPlatform.Core.Entities
@{
    ViewData["Title"] = "تعيين مدرس جديد";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-0">
                <div class="card-header bg-gradient-primary text-white py-3">
                    <h4 class="mb-0">
                        <i class="fas fa-user-plus me-2"></i>
                        تعيين مدرس جديد
                    </h4>
                </div>

                <div class="card-body p-4">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        اختر مستخدم من القائمة ليتم تعيينه كمدرس على المنصة
                    </div>

                    @if (ViewBag.Users == null || !((List<ApplicationUser>)ViewBag.Users).Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-users-slash fa-4x text-muted opacity-25 mb-3"></i>
                            <h5 class="text-muted mb-3">لا يوجد مستخدمين متاحين</h5>
                            <p class="text-muted">جميع المستخدمين الحاليين لديهم بالفعل دور المدرس أو الأدمن</p>
                        </div>
                    }
                    else
                    {
                        <form asp-action="AssignInstructor" method="post">
                            @Html.AntiForgeryToken()

                            <div class="mb-4">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-user text-primary me-1"></i>
                                    اختر المستخدم
                                </label>
                                <select name="userId" class="form-select form-select-lg" required>
                                    <option value="">-- اختر مستخدم --</option>
                                    @foreach (var user in ViewBag.Users)
                                    {
                                        <option value="@user.Id">
                                            @user.FullName - @user.Email
                                        </option>
                                    }
                                </select>
                            </div>

                            <hr class="my-4" />

                            <div class="d-flex justify-content-between align-items-center">
                                <a asp-action="Instructors" class="btn btn-outline-secondary btn-lg">
                                    <i class="fas fa-arrow-right me-2"></i>
                                    رجوع
                                </a>

                                <button type="submit" class="btn btn-primary btn-lg px-5">
                                    <i class="fas fa-check me-2"></i>
                                    تعيين كمدرس
                                </button>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>