@model EduPlatform.Web.ViewModels.Admin.StudentDetailsViewModel
@{
    ViewData["Title"] = "تفاصيل الطالب";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4 fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="mb-0"><i class="fas fa-user-graduate text-primary me-2"></i>تفاصيل الطالب</h4>
        <div class="d-flex gap-2">
            <a href="/Admin/Student/Edit/@Model.Id" class="btn btn-primary btn-sm">
                <i class="fas fa-edit me-1"></i>تعديل
            </a>
            <a href="/Admin/Student" class="btn btn-outline-secondary btn-sm">
                <i class="fas fa-arrow-right me-1"></i>العودة
            </a>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center pt-4">
                    <div class="bg-primary bg-opacity-10 rounded-circle p-4 d-inline-block mb-3">
                        <i class="fas fa-user-graduate fa-3x text-primary"></i>
                    </div>
                    <h5 class="fw-bold mb-1">@Model.FullName</h5>
                    <p class="text-muted small mb-1"><i class="fas fa-envelope me-1"></i>@Model.Email</p>
                    @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                    {
                        <p class="text-muted small mb-3"><i class="fas fa-phone-alt me-1"></i>@Model.PhoneNumber</p>
                    }
                    <div class="d-flex justify-content-center gap-2 mb-3">
                        @if (Model.GradeLevel != "-")
                        {
                            <span class="badge bg-info">@Model.GradeLevel</span>
                        }
                        @if (Model.Branch != "-")
                        {
                            <span class="badge bg-secondary">@Model.Branch</span>
                        }
                    </div>
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success px-3 py-2"><i class="fas fa-check me-1"></i>حساب نشط</span>
                    }
                    else
                    {

                        <span class="badge bg-danger px-3 py-2"><i class="fas fa-ban me-1"></i>حساب موقوف</span>
                    }
                    <div class="border-top pt-3 mt-3">
                        <div class="row text-center g-0">
                            <div class="col-6 border-end">
                                <small class="text-muted d-block">تاريخ التسجيل</small>
                                <span class="fw-semibold small">@Model.RegisteredAt.ToString("dd/MM/yyyy")</span>
                            </div>
                            <div class="col-6">
                                <small class="text-muted d-block">آخر دخول</small>
                                <span class="fw-semibold small">@(Model.LastLogin?.ToString("dd/MM/yyyy") ?? "لم يدخل")</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            @if (Model.Progress.Any())
            {
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0 fw-bold"><i class="fas fa-chart-line text-success me-2"></i>ملخص التقدم</h5>
                    </div>
                    <div class="card-body">
                        @foreach (var p in Model.Progress)
                        {
                            <div class="mb-3">
                                <div class="d-flex justify-content-between mb-1">
                                    <span class="fw-semibold small">@p.Key</span>
                                    <span class="text-muted small">@p.Value%</span>
                                </div>
                                <div class="progress" style="height:8px;">
                                    <div class="progress-bar @(p.Value >= 70 ? "bg-success" : p.Value >= 40 ? "bg-warning" : "bg-danger")"
                                         style="width:@p.Value%;"></div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">
                        <i class="fas fa-book-open text-primary me-2"></i>
                        الاشتراكات <span class="badge bg-primary ms-1">@Model.Enrollments.Count</span>
                    </h5>
                    <a href="/Admin/Student/Enrollments/@Model.Id" class="btn btn-sm btn-outline-primary">عرض الكل</a>
                </div>
                <div class="card-body p-0">
                    @if (!Model.Enrollments.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-book-open fa-4x text-muted opacity-25 mb-3"></i>
                            <h5 class="text-muted">لا توجد اشتراكات</h5>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="px-4">المادة</th>
                                        <th>المدرس</th>
                                        <th>الاشتراك</th>
                                        <th>الانتهاء</th>
                                        <th>الحالة</th>
                                        <th>التقدم</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var e in Model.Enrollments)
                                    {
                                        <tr>
                                            <td class="px-4 fw-semibold">@e.CourseName</td>
                                            <td><small class="text-muted">@e.InstructorName</small></td>
                                            <td><small class="text-muted">@e.EnrolledAt.ToString("dd/MM/yyyy")</small></td>
                                            <td><small class="text-muted">@e.ExpiresAt.ToString("dd/MM/yyyy")</small></td>
                                            <td>
                                                @if (e.Status == "Active")
                                                {
                                                    <span class="badge bg-success">نشط</span>
                                                }
                                                else
                                                {

                                                    <span class="badge bg-secondary">منتهي</span>
                                                }
                                            </td>
                                            <td style="min-width:130px;">
                                                <div class="d-flex align-items-center gap-2">
                                                    <div class="progress flex-grow-1" style="height:6px;">
                                                        <div class="progress-bar @(e.Progress >= 70 ? "bg-success" : e.Progress >= 40 ? "bg-warning" : "bg-danger")"
                                                             style="width:@e.Progress%;"></div>
                                                    </div>
                                                    <small class="text-muted">@e.Progress%</small>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>