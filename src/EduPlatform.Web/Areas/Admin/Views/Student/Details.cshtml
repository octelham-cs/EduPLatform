@model EduPlatform.Web.ViewModels.Admin.StudentDetailsViewModel

@{
    ViewData["Title"] = "تفاصيل الطالب";
}

<div class="container-fluid fade-in">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-user-graduate text-primary me-2"></i>
            تفاصيل الطالب
        </h2>
        <div>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-right me-1"></i> العودة للقائمة
            </a>
        </div>
    </div>

    <!-- Student Info Card -->
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body text-center">
                    <div class="rounded-circle bg-primary bg-opacity-10 p-4 d-inline-block mb-3">
                        <i class="fas fa-user-graduate fa-4x text-primary"></i>
                    </div>
                    <h4>@Model.FullName</h4>
                    <p class="text-muted mb-2">@Model.Email</p>
                    <p class="text-muted mb-3"><i class="fas fa-phone-alt me-1"></i> @Model.PhoneNumber</p>

                    <div class="d-flex justify-content-center gap-2 mb-3">
                        <span class="badge bg-info">@Model.GradeLevel</span>
                        @if (!string.IsNullOrEmpty(Model.Branch))
                        {
                            <span class="badge bg-secondary">@Model.Branch</span>
                        }
                    </div>

                    <div class="border-top pt-3">
                        <div class="row">
                            <div class="col-6">
                                <small class="text-muted">تاريخ التسجيل</small>
                                <h6>@Model.RegisteredAt.ToString("yyyy/MM/dd")</h6>
                            </div>
                            <div class="col-6">
                                <small class="text-muted">آخر دخول</small>
                                <h6>@(Model.LastLogin?.ToString("yyyy/MM/dd") ?? "-")</h6>
                            </div>
                        </div>
                    </div>

                    <div class="mt-3">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success p-2">حساب نشط</span>
                        }
                        else
                        {
                            <span class="badge bg-danger p-2">حساب موقوف</span>
                        }
                    </div>

                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary w-100 mt-3">
                        <i class="fas fa-edit me-1"></i> تعديل البيانات
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <!-- Enrollments Card -->
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-book-open me-2"></i>
                        الاشتراكات (@Model.Enrollments.Count)
                    </h5>
                </div>
                <div class="card-body">
                    @if (!Model.Enrollments.Any())
                    {
                        <div class="text-center py-4">
                            <div class="rounded-circle bg-light d-inline-flex p-4 mb-3">
                                <i class="fas fa-book-open fa-3x text-muted"></i>
                            </div>
                            <h6 class="text-muted">لا يوجد اشتراكات</h6>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>المادة</th>
                                        <th>المدرس</th>
                                        <th>تاريخ الاشتراك</th>
                                        <th>تاريخ الانتهاء</th>
                                        <th>الحالة</th>
                                        <th>التقدم</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var enrollment in Model.Enrollments)
                                    {
                                        <tr>
                                            <td>@enrollment.CourseName</td>
                                            <td>@enrollment.InstructorName</td>
                                            <td>@enrollment.EnrolledAt.ToString("yyyy/MM/dd")</td>
                                            <td>@enrollment.ExpiresAt.ToString("yyyy/MM/dd")</td>
                                            <td>
                                                @if (enrollment.Status == "Active")
                                                {
                                                    <span class="badge bg-success">نشط</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">منتهي</span>
                                                }
                                            </td>
                                            <td style="min-width: 150px;">
                                                <div class="progress" style="height: 20px;">
                                                    <div class="progress-bar bg-success"
                                                         role="progressbar"
                                                         style="width: @enrollment.Progress%;"
                                                         aria-valuenow="@enrollment.Progress"
                                                         aria-valuemin="0"
                                                         aria-valuemax="100">
                                                        @enrollment.Progress%
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>