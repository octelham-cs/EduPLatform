@model List<EduPlatform.Core.Entities.Enrollment>
@{
    ViewData["Title"] = "اشتراكات الطالب";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var studentName = ViewBag.StudentName as string ?? "الطالب";
    var studentId = (int)(ViewBag.StudentId ?? 0);
}

<div class="container-fluid py-4 fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="mb-0"><i class="fas fa-book-open text-primary me-2"></i>اشتراكات: @studentName</h4>
        <div class="d-flex gap-2">
            <a href="/Admin/Student/Details/@studentId" class="btn btn-outline-info btn-sm">
                <i class="fas fa-eye me-1"></i>تفاصيل الطالب
            </a>
            <a href="/Admin/Student" class="btn btn-outline-secondary btn-sm">
                <i class="fas fa-arrow-right me-1"></i>العودة
            </a>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0 fw-bold">
                <i class="fas fa-list text-primary me-2"></i>
                سجل الاشتراكات <span class="badge bg-primary ms-1">@Model.Count</span>
            </h5>
        </div>
        <div class="card-body p-0">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-book-open fa-4x text-muted opacity-25 mb-3"></i>
                    <h5 class="text-muted">لا توجد اشتراكات</h5>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="px-4">#</th>
                                <th>المادة</th>
                                <th>المدرس</th>
                                <th>الكود</th>
                                <th>تاريخ الاشتراك</th>
                                <th>تاريخ الانتهاء</th>
                                <th>الحالة</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                var en = Model[i];
                                var expired = en.ExpiresAt < DateTime.Now;
                                <tr>
                                    <td class="px-4 text-muted">@(i + 1)</td>
                                    <td class="fw-semibold">@(en.Course?.Title ?? "-")</td>
                                    <td><small class="text-muted">@(en.Course?.Instructor?.User?.FullName ?? "-")</small></td>
                                    <td>
                                        @if (en.EnrollmentCode != null)
                                        {
                                            <code class="text-primary">@en.EnrollmentCode.Code</code>
                                        }
                                        else
                                        {

                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td><small class="text-muted">@en.EnrolledAt.ToString("dd/MM/yyyy")</small></td>
                                    <td>
                                        <small class="@(expired ? "text-danger fw-semibold" : "text-muted")">
                                            @en.ExpiresAt.ToString("dd/MM/yyyy")
                                        </small>
                                    </td>
                                    <td>
                                        @if (en.Status == EduPlatform.Core.Enums.EnrollmentStatus.Active && !expired)
                                        {
                                            <span class="badge bg-success px-3 py-2"><i class="fas fa-check me-1"></i>نشط</span>
                                        }
                                        else
                                        {

                                            <span class="badge bg-secondary px-3 py-2">منتهي</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>