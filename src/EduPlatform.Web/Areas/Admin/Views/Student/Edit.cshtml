@model EduPlatform.Web.ViewModels.Admin.StudentEditViewModel
@{
    ViewData["Title"] = "تعديل بيانات الطالب";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4 fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="mb-0"><i class="fas fa-user-edit text-primary me-2"></i>تعديل بيانات الطالب</h4>
        <a href="/Admin/Student" class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-arrow-right me-1"></i>العودة
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-10">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold"><i class="fas fa-edit text-primary me-2"></i>بيانات الطالب</h5>
                </div>
                <div class="card-body p-4">
                    <form action="/Admin/Student/Edit/@Model.Id" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="Id" value="@Model.Id" />

                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-user text-primary me-1"></i>الاسم الكامل <span class="text-danger">*</span>
                            </label>
                            <input type="text" name="FullName" value="@Model.FullName"
                                   class="form-control form-control-lg" placeholder="أدخل الاسم الكامل" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-envelope text-primary me-1"></i>البريد الإلكتروني <span class="text-danger">*</span>
                            </label>
                            <input type="email" name="Email" value="@Model.Email"
                                   class="form-control form-control-lg" placeholder="example@domain.com" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-phone-alt text-primary me-1"></i>رقم الهاتف
                            </label>
                            <input type="text" name="PhoneNumber" value="@Model.PhoneNumber"
                                   class="form-control form-control-lg" placeholder="01xxxxxxxxx" />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-layer-group text-primary me-1"></i>المستوى الدراسي
                                </label>
                                <select name="GradeLevelId" class="form-select form-select-lg">
                                    <option value="">-- اختر المستوى --</option>
                                    @foreach (var level in Model.GradeLevels)
                                    {
                                        <option value="@level.Id" @(Model.GradeLevelId == level.Id ? "selected" : "")>
                                            @level.Name
                                        </option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-code-branch text-primary me-1"></i>الشعبة
                                </label>
                                <select name="BranchId" class="form-select form-select-lg">
                                    <option value="">-- اختياري --</option>
                                    @foreach (var branch in Model.Branches)
                                    {
                                        <option value="@branch.Id" @(Model.BranchId == branch.Id ? "selected" : "")>
                                            @branch.Name
                                        </option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input type="checkbox" name="IsActive" class="form-check-input" role="switch"
                                       id="isActive" value="true" @(Model.IsActive ? "checked" : "") />
                                <input type="hidden" name="IsActive" value="false" />
                                <label class="form-check-label fw-bold" for="isActive">
                                    الحساب نشط
                                    <small class="text-muted fw-normal">(تعطيله يمنع الطالب من الدخول)</small>
                                </label>
                            </div>
                        </div>

                        <hr class="my-4" />

                        <div class="d-flex justify-content-between">
                            <a href="/Admin/Student/Details/@Model.Id" class="btn btn-outline-info">
                                <i class="fas fa-eye me-1"></i>عرض التفاصيل
                            </a>
                            <div class="d-flex gap-2">
                                <a href="/Admin/Student" class="btn btn-outline-secondary">إلغاء</a>
                                <button type="submit" class="btn btn-primary px-4">
                                    <i class="fas fa-save me-1"></i>حفظ التعديلات
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>