@model List<EduPlatform.Web.ViewModels.Admin.StudentListViewModel>

@{
    ViewData["Title"] = "إدارة الطلاب";
}

<div class="container-fluid fade-in">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-user-graduate text-primary me-2"></i>
            إدارة الطلاب
        </h2>
        <div>
            <a href="#" onclick="window.print()" class="btn btn-outline-secondary me-2">
                <i class="fas fa-print me-1"></i> طباعة
            </a>
            <a href="#" class="btn btn-success" id="exportExcel">
                <i class="fas fa-file-excel me-1"></i> تصدير Excel
            </a>
        </div>
    </div>

    <!-- Search Card -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="fas fa-search text-muted"></i>
                        </span>
                        <input type="text" class="form-control border-start-0"
                               name="searchTerm" value="@ViewBag.SearchTerm"
                               placeholder="بحث بالاسم أو البريد الإلكتروني أو رقم الهاتف...">
                    </div>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search me-1"></i> بحث
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Students Table -->
    <div class="card">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <div class="rounded-circle bg-light d-inline-flex p-4 mb-3">
                        <i class="fas fa-user-graduate fa-3x text-muted"></i>
                    </div>
                    <h5 class="text-muted">لا يوجد طلاب حتى الآن</h5>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>الطالب</th>
                                <th>معلومات الاتصال</th>
                                <th>المستوى / الشعبة</th>
                                <th>تاريخ التسجيل</th>
                                <th>الحالة</th>
                                <th>الاشتراكات</th>
                                <th>الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                var student = Model[i];
                                <tr>
                                    <td>@((ViewBag.CurrentPage - 1) * 10 + i + 1)</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3">
                                                <i class="fas fa-user-graduate text-primary"></i>
                                            </div>
                                            <div>
                                                <h6 class="mb-0">@student.FullName</h6>
                                                <small class="text-muted">@student.Email</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div><i class="fas fa-phone-alt me-1 text-muted"></i> @student.PhoneNumber</div>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@student.GradeLevel</span>
                                        @if (!string.IsNullOrEmpty(student.Branch))
                                        {
                                            <span class="badge bg-secondary">@student.Branch</span>
                                        }
                                    </td>
                                    <td>@student.RegisteredAt.ToString("yyyy/MM/dd")</td>
                                    <td>
                                        @if (student.IsActive)
                                        {
                                            <span class="badge bg-success">نشط</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">موقوف</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">@student.EnrollmentsCount</span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@student.Id"
                                               class="btn btn-sm btn-outline-info" title="تفاصيل">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@student.Id"
                                               class="btn btn-sm btn-outline-warning" title="تعديل">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Enrollments" asp-route-id="@student.Id"
                                               class="btn btn-sm btn-outline-success" title="الاشتراكات">
                                                <i class="fas fa-book"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm @(student.IsActive ? "btn-outline-danger" : "btn-outline-success")"
                                                    onclick="toggleStatus(@student.Id)" title="@(student.IsActive ? "تعطيل" : "تفعيل")">
                                                <i class="fas @(student.IsActive ? "fa-ban" : "fa-check")"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (ViewBag.TotalPages > 1)
                {
                    <nav class="mt-4">
                        <ul class="pagination justify-content-center">
                            @for (int i = 1; i <= ViewBag.TotalPages; i++)
                            {
                                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="?page=@i&searchTerm=@ViewBag.SearchTerm">@i</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function toggleStatus(id) {
            Swal.fire({
                title: 'تأكيد',
                text: 'هل أنت متأكد من تغيير حالة الطالب؟',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'نعم',
                cancelButtonText: 'إلغاء'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('/Admin/Student/ToggleStatus/' + id)
                        .done(function(response) {
                            if (response.success) {
                                Swal.fire('تم', response.message, 'success')
                                    .then(() => location.reload());
                            } else {
                                Swal.fire('خطأ', 'حدث خطأ', 'error');
                            }
                        })
                        .fail(function() {
                            Swal.fire('خطأ', 'حدث خطأ في الاتصال', 'error');
                        });
                }
            });
        }

        @if (TempData["Success"] != null)
        {
                <text>
                $(document).ready(function() {
                    Swal.fire('تم', '@TempData["Success"]', 'success');
                });
                </text>
        }
    </script>
}