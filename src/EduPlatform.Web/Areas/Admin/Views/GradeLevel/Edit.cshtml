@model EduPlatform.Web.ViewModels.Admin.GradeLevelEditViewModel

@{
    ViewData["Title"] = "تعديل المستوى";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid fade-in">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- بطاقة تعديل المستوى -->
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-edit text-warning ms-2"></i>
                        تعديل المستوى: @Model.Name
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <!-- الاسم بالعربية -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold"></label>
                            <input asp-for="Name" class="form-control" placeholder="أدخل اسم المستوى بالعربية" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <!-- الاسم بالإنجليزية -->
                        <div class="mb-3">
                            <label asp-for="NameEn" class="form-label fw-bold"></label>
                            <input asp-for="NameEn" class="form-control" placeholder="Enter grade level name in English" />
                            <span asp-validation-for="NameEn" class="text-danger small"></span>
                        </div>

                        <!-- الترتيب -->
                        <div class="mb-3">
                            <label asp-for="Order" class="form-label fw-bold"></label>
                            <input asp-for="Order" type="number" class="form-control" placeholder="مثال: 1" />
                            <span asp-validation-for="Order" class="text-danger small"></span>
                            <small class="text-muted d-block mt-1">
                                <i class="fas fa-info-circle me-1"></i>
                                الأقل ترتيباً يظهر أولاً في القوائم
                            </small>
                        </div>

                        <!-- الحالة -->
                        <div class="mb-4">
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input" />
                                <label asp-for="IsActive" class="form-check-label fw-bold">
                                    المستوى نشط
                                </label>
                            </div>
                        </div>

                        <hr />

                        <!-- أزرار التحكم - معدلة بالطريقة الجديدة -->
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index", "GradeLevel", new { area = "Admin" })" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-right ms-2"></i>
                                رجوع
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save ms-2"></i>
                                حفظ التعديلات
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- بطاقة مساعدة (اختياري) -->
            <div class="card shadow-sm mt-3 bg-light">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="fas fa-lightbulb text-warning fa-2x"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="fw-bold mb-1">نصائح للتعديل:</h6>
                            <p class="text-muted small mb-0">
                                <i class="fas fa-check-circle text-success me-1"></i>
                                تأكد من كتابة اسم المستوى بشكل صحيح بالعربية والإنجليزية.
                                <br>
                                <i class="fas fa-check-circle text-success me-1"></i>
                                الترتيب يتحكم في ظهور المستوى في القوائم (1 = الأعلى).
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}