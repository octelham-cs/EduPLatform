@model EduPlatform.Web.ViewModels.Admin.GradeLevelDetailsViewModel

@{
    ViewData["Title"] = "تفاصيل المستوى";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid fade-in">
    <!-- عنوان الصفحة مع الأزرار المعدلة -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">
            <i class="fas fa-layer-group text-primary ms-2"></i>
            تفاصيل المستوى: @Model.Name
        </h1>
        <div>
            <!-- زر التعديل - بالطريقة الجديدة -->
            <a href="@Url.Action("Edit", "GradeLevel", new { area = "Admin", id = Model.Id })" class="btn btn-warning me-2">
                <i class="fas fa-edit ms-2"></i>
                تعديل
            </a>
            <!-- زر العودة - بالطريقة الجديدة -->
            <a href="@Url.Action("Index", "GradeLevel", new { area = "Admin" })" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-right ms-2"></i>
                العودة للقائمة
            </a>
        </div>
    </div>

    <div class="row">
        <!-- العمود الأيمن: معلومات المستوى -->
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex p-4">
                            <i class="fas fa-layer-group fa-4x text-primary"></i>
                        </div>
                    </div>

                    <table class="table table-borderless align-middle">
                        <tr>
                            <th class="ps-0 fw-bold">الاسم بالعربية:</th>
                            <td class="pe-0 text-end">@Model.Name</td>
                        </tr>
                        @if (!string.IsNullOrEmpty(Model.NameEn))
                        {
                            <tr>
                                <th class="ps-0 fw-bold">الاسم بالإنجليزية:</th>
                                <td class="pe-0 text-end">@Model.NameEn</td>
                            </tr>
                        }
                        <tr>
                            <th class="ps-0 fw-bold">الترتيب:</th>
                            <td class="pe-0 text-end">
                                <span class="badge bg-info">@Model.Order</span>
                            </td>
                        </tr>
                        <tr>
                            <th class="ps-0 fw-bold">الحالة:</th>
                            <td class="pe-0 text-end">
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">نشط</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">غير نشط</span>
                                }
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <!-- العمود الأيسر: التبويبات -->
        <div class="col-md-8">
            <!-- تبويبات المواد والطلاب -->
            <ul class="nav nav-tabs mb-4" id="gradeLevelTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="subjects-tab" data-bs-toggle="tab" data-bs-target="#subjects" type="button" role="tab">
                        <i class="fas fa-book-open ms-2"></i>
                        المواد (@Model.Subjects.Count)
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="students-tab" data-bs-toggle="tab" data-bs-target="#students" type="button" role="tab">
                        <i class="fas fa-user-graduate ms-2"></i>
                        الطلاب (@Model.Students.Count)
                    </button>
                </li>
            </ul>

            <!-- محتوى التبويبات -->
            <div class="tab-content">
                <!-- تبويب المواد -->
                <div class="tab-pane fade show active" id="subjects" role="tabpanel">
                    <div class="card shadow-sm">
                        <div class="card-header bg-white py-3">
                            <h5 class="mb-0">
                                <i class="fas fa-book-open text-primary ms-2"></i>
                                المواد الدراسية في هذا المستوى
                            </h5>
                        </div>
                        <div class="card-body">
                            @if (!Model.Subjects.Any())
                            {
                                <div class="text-center py-4">
                                    <i class="fas fa-book-open fa-3x text-muted mb-3"></i>
                                    <p class="text-muted">لا توجد مواد في هذا المستوى</p>
                                </div>
                            }
                            else
                            {
                                <div class="table-responsive">
                                    <table class="table table-hover align-middle">
                                        <thead class="table-light">
                                            <tr>
                                                <th>المادة</th>
                                                <th>الشعبة</th>
                                                <th>عدد المدرسين</th>
                                                <th>الإجراءات</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var subject in Model.Subjects)
                                            {
                                                <tr>
                                                    <td class="fw-bold">@subject.SubjectName</td>
                                                    <td>@subject.Branch</td>
                                                    <td>
                                                        <span class="badge bg-info">@subject.InstructorsCount</span>
                                                    </td>
                                                    <td>
                                                        <a href="@Url.Action("Details", "Subject", new { area = "Admin", id = subject.SubjectId })"
                                                           class="btn btn-sm btn-outline-info" title="عرض المادة">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- تبويب الطلاب -->
                <div class="tab-pane fade" id="students" role="tabpanel">
                    <div class="card shadow-sm">
                        <div class="card-header bg-white py-3">
                            <h5 class="mb-0">
                                <i class="fas fa-user-graduate text-primary ms-2"></i>
                                الطلاب في هذا المستوى
                            </h5>
                        </div>
                        <div class="card-body">
                            @if (!Model.Students.Any())
                            {
                                <div class="text-center py-4">
                                    <i class="fas fa-user-graduate fa-3x text-muted mb-3"></i>
                                    <p class="text-muted">لا يوجد طلاب في هذا المستوى</p>
                                </div>
                            }
                            else
                            {
                                <div class="table-responsive">
                                    <table class="table table-hover align-middle">
                                        <thead class="table-light">
                                            <tr>
                                                <th>الطالب</th>
                                                <th>البريد الإلكتروني</th>
                                                <th>الشعبة</th>
                                                <th>تاريخ التسجيل</th>
                                                <th>الإجراءات</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var student in Model.Students)
                                            {
                                                <tr>
                                                    <td class="fw-bold">@student.StudentName</td>
                                                    <td>@student.Email</td>
                                                    <td>@student.Branch</td>
                                                    <td>@student.RegisteredAt.ToString("yyyy/MM/dd")</td>
                                                    <td>
                                                        <a href="@Url.Action("Details", "Student", new { area = "Admin", id = student.StudentId })"
                                                           class="btn btn-sm btn-outline-info" title="عرض الطالب">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <p class="text-muted small mt-3 mb-0">
                                    <i class="fas fa-info-circle me-1"></i>
                                    * عرض آخر 20 طالب فقط
                                </p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>