@model List<EduPlatform.Web.ViewModels.Admin.GradeLevelListViewModel>

@{
    ViewData["Title"] = "إدارة المستويات الدراسية";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid fade-in">
    <!-- عنوان الصفحة مع زر الإضافة المعدل -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">
            <i class="fas fa-layer-group text-primary ms-2"></i>
            إدارة المستويات الدراسية
        </h1>
        <a href="@Url.Action("Create", "GradeLevel", new { area = "Admin" })" class="btn btn-primary">
            <i class="fas fa-plus ms-2"></i>
            إضافة مستوى جديد
        </a>
    </div>

    <!-- قسم البحث -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="fas fa-search text-muted"></i>
                        </span>
                        <input type="text" class="form-control border-start-0 ps-0"
                               name="searchTerm" value="@ViewBag.SearchTerm"
                               placeholder="ابحث باسم المستوى..." />
                    </div>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search ms-2"></i>بحث
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- جدول المستويات -->
    <div class="card shadow-sm">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <div class="mb-3">
                        <i class="fas fa-layer-group fa-4x text-muted opacity-50"></i>
                    </div>
                    <h5 class="text-muted mb-3">لا توجد مستويات دراسية مضافة حتى الآن</h5>
                    <a href="@Url.Action("Create", "GradeLevel", new { area = "Admin" })" class="btn btn-primary">
                        <i class="fas fa-plus ms-2"></i>
                        إضافة أول مستوى
                    </a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>المستوى</th>
                                <th>الترتيب</th>
                                <th>الحالة</th>
                                <th>المواد</th>
                                <th>الطلاب</th>
                                <th>الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int counter = ((ViewBag.CurrentPage - 1) * 10) + 1;
                            }
                            @foreach (var level in Model)
                            {
                                <tr>
                                    <td>@(counter++)</td>
                                    <td>
                                        <div class="fw-bold">@level.Name</div>
                                        @if (!string.IsNullOrEmpty(level.NameEn))
                                        {
                                            <small class="text-muted">@level.NameEn</small>
                                        }
                                    </td>
                                    <td>@level.Order</td>
                                    <td>
                                        @if (level.IsActive)
                                        {
                                            <span class="badge bg-success">نشط</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">غير نشط</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@level.SubjectsCount</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">@level.StudentsCount</span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <!-- تفاصيل -->
                                            <a href="@Url.Action("Details", "GradeLevel", new { area = "Admin", id = level.Id })"
                                               class="btn btn-sm btn-outline-info" title="تفاصيل">
                                                <i class="fas fa-eye"></i>
                                            </a>

                                            <!-- تعديل -->
                                            <a href="@Url.Action("Edit", "GradeLevel", new { area = "Admin", id = level.Id })"
                                               class="btn btn-sm btn-outline-warning" title="تعديل">
                                                <i class="fas fa-edit"></i>
                                            </a>

                                            <!-- تغيير الحالة -->
                                            <button type="button" class="btn btn-sm @(level.IsActive ? "btn-outline-danger" : "btn-outline-success")"
                                                    onclick="toggleStatus(@level.Id)"
                                                    title="@(level.IsActive ? "تعطيل" : "تفعيل")">
                                                <i class="fas @(level.IsActive ? "fa-ban" : "fa-check")"></i>
                                            </button>

                                            <!-- حذف -->
                                            <button type="button" class="btn btn-sm btn-outline-danger"
                                                    onclick="deleteGradeLevel(@level.Id, '@level.Name')"
                                                    title="حذف">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                if (ViewBag.TotalPages > 1)
                {
                    <nav class="mt-4">
                        <ul class="pagination justify-content-center">
                            @for (int i = 1; i <= ViewBag.TotalPages; i++)
                            {
                                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="?page=@i&searchTerm=@ViewBag.SearchTerm">@i</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function toggleStatus(id) {
            Swal.fire({
                title: 'تأكيد',
                text: 'هل أنت متأكد من تغيير حالة المستوى؟',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'نعم',
                cancelButtonText: 'إلغاء'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('/Admin/GradeLevel/ToggleStatus/' + id)
                        .done(function(response) {
                            if (response.success) {
                                Swal.fire('تم', response.message, 'success')
                                    .then(() => location.reload());
                            } else {
                                Swal.fire('خطأ', response.message, 'error');
                            }
                        })
                        .fail(function() {
                            Swal.fire('خطأ', 'حدث خطأ في الاتصال', 'error');
                        });
                }
            });
        }

        function deleteGradeLevel(id, name) {
            Swal.fire({
                title: 'تأكيد الحذف',
                html: `هل أنت متأكد من حذف المستوى <strong>${name}</strong>؟`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'نعم، احذف',
                cancelButtonText: 'إلغاء'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('/Admin/GradeLevel/Delete/' + id)
                        .done(function(response) {
                            if (response.success) {
                                Swal.fire('تم الحذف', response.message, 'success')
                                    .then(() => location.reload());
                            } else {
                                Swal.fire('خطأ', response.message, 'error');
                            }
                        })
                        .fail(function() {
                            Swal.fire('خطأ', 'حدث خطأ في الاتصال', 'error');
                        });
                }
            });
        }

        @if (TempData["Success"] != null)
        {
                <text>
                $(document).ready(function() {
                    Swal.fire('تم', '@TempData["Success"]', 'success');
                });
                </text>
        }
    </script>
}