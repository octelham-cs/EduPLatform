@model EduPlatform.Web.ViewModels.Admin.GradeLevelCreateViewModel

@{
    ViewData["Title"] = "إضافة مستوى جديد";
}

<div class="container-fluid fade-in">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-plus-circle me-2 text-primary"></i>
                        إضافة مستوى جديد
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold"></label>
                            <input asp-for="Name" class="form-control" placeholder="مثال: أولى ثانوي" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NameEn" class="form-label fw-bold"></label>
                            <input asp-for="NameEn" class="form-control" placeholder="Example: First Year" />
                            <span asp-validation-for="NameEn" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Order" class="form-label fw-bold"></label>
                            <input asp-for="Order" type="number" class="form-control" placeholder="مثال: 1" />
                            <span asp-validation-for="Order" class="text-danger"></span>
                            <small class="text-muted">الأقل ترتيباً يظهر أولاً</small>
                        </div>

                        <div class="mb-4">
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input" checked />
                                <label asp-for="IsActive" class="form-check-label fw-bold">
                                    المستوى نشط
                                </label>
                            </div>
                        </div>

                        <hr />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-right me-1"></i> رجوع
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i> حفظ
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}