<!-- src/EduPlatform.Web/Views/Shared/_Layout.cshtml -->
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EduPlatform</title>

    <!-- Google Fonts - Cairo -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- Bootstrap 5 RTL -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css" rel="stylesheet">

    <!-- FontAwesome 6 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
        <div class="container-fluid">
            <button class="navbar-toggler d-lg-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarOffcanvas" aria-controls="sidebarOffcanvas">
                <span class="navbar-toggler-icon"></span>
            </button>

            <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="fas fa-graduation-cap fa-lg me-2"></i>
                EduPlatform
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" aria-controls="navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarMain">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <partial name="_LoginPartial" />
                </ul>
            </div>
        </div>
    </nav>

    <div class="d-flex">
        @if (User.Identity?.IsAuthenticated == true)
        {
            <!-- Sidebar - تظهر لكل المستخدمين المسجلين -->
            <aside class="sidebar d-none d-lg-block">
                <div class="sidebar-header">
                    <h6><i class="fas fa-th-large me-2"></i>القائمة الرئيسية</h6>
                </div>

                @if (User.IsInRole("Instructor"))
                {
                    <ul class="nav flex-column px-0 py-2">
                        <li class="nav-item">
                            <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard") ? "active" : "")"
                               asp-area="Instructor" asp-controller="Dashboard" asp-action="Index">
                                <i class="fas fa-home"></i>
                                <span>الرئيسية</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() == "Course") ? "active" : "")"
                               asp-area="Instructor" asp-controller="Course" asp-action="Index">
                                <i class="fas fa-book"></i>
                                <span>الكورسات</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() == "Code") ? "active" : "")"
                               asp-area="Instructor" asp-controller="Code" asp-action="Index">
                                <i class="fas fa-qrcode"></i>
                                <span>الأكواد</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Instructor" asp-controller="Video" asp-action="Index">
                                <i class="fas fa-video"></i>
                                <span>الفيديوهات</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Instructor" asp-controller="QuestionBank" asp-action="Index">
                                <i class="fas fa-question-circle"></i>
                                <span>بنك الأسئلة</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() == "Quiz") ? "active" : "")"
                               asp-area="Instructor" asp-controller="Quiz" asp-action="Index">
                                <i class="fas fa-tasks"></i>
                                <span>الكويزات</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Instructor" asp-controller="Student" asp-action="Index">
                                <i class="fas fa-users"></i>
                                <span>الطلاب</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Instructor" asp-controller="Report" asp-action="Index">
                                <i class="fas fa-chart-bar"></i>
                                <span>التقارير</span>
                            </a>
                        </li>
                    </ul>
                }
                else if (User.IsInRole("Admin"))
                {
                    <ul class="nav flex-column px-0 py-2">
                        <li class="nav-item">
                            <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard") ? "active" : "")"
                               asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                                <i class="fas fa-home"></i>
                                <span>الرئيسية</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Instructors">
                                <i class="fas fa-chalkboard-teacher"></i>
                                <span>المدرسين</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Student" asp-action="Index">
                                <i class="fas fa-user-graduate"></i>
                                <span>الطلاب</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Subject" asp-action="Index">
                                <i class="fas fa-book-open"></i>
                                <span>المواد</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() == "GradeLevel") ? "active" : "")"
                               asp-area="Admin" asp-controller="GradeLevel" asp-action="Index">
                                <i class="fas fa-layer-group"></i>
                                <span>المستويات</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() == "Branch") ? "active" : "")"
                               asp-area="Admin" asp-controller="Branch" asp-action="Index">
                                <i class="fas fa-code-branch"></i>
                                <span>الشعب</span>
                            </a>
                        </li>
                    </ul>
                }
                else if (User.IsInRole("Student"))
                {
                    <ul class="nav flex-column px-0 py-2">
                        <li class="nav-item">
                            <a class="nav-link @((ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard") ? "active" : "")"
                               href="@Url.Action("Dashboard", "Student", new { area = "Student" })">
                                <i class="fas fa-tachometer-alt"></i>
                                <span>لوحة التحكم</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @((ViewContext.RouteData.Values["action"]?.ToString() == "MyEnrollments") ? "active" : "")"
                               href="@Url.Action("MyEnrollments", "Student", new { area = "Student" })">
                                <i class="fas fa-book-open"></i>
                                <span>كورساتي</span>
                            </a>
                        </li>
                    </ul>
                }
            </aside>

            <!-- Mobile Offcanvas Sidebar -->
            <div class="offcanvas offcanvas-start" tabindex="-1" id="sidebarOffcanvas" style="width: 280px;">
                <div class="offcanvas-header bg-dark text-white">
                    <h5 class="offcanvas-title">
                        <i class="fas fa-graduation-cap me-2"></i>
                        القائمة الرئيسية
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"></button>
                </div>
                <div class="offcanvas-body p-0 bg-dark">
                    @if (User.IsInRole("Instructor"))
                    {
                        <ul class="nav flex-column px-3 py-2">
                            <li class="nav-item">
                                <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard") ? "active" : "")"
                                   asp-area="Instructor" asp-controller="Dashboard" asp-action="Index">
                                    <i class="fas fa-home"></i>
                                    <span>الرئيسية</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() == "Course") ? "active" : "")"
                                   asp-area="Instructor" asp-controller="Course" asp-action="Index">
                                    <i class="fas fa-book"></i>
                                    <span>الكورسات</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() == "Code") ? "active" : "")"
                                   asp-area="Instructor" asp-controller="Code" asp-action="Index">
                                    <i class="fas fa-qrcode"></i>
                                    <span>الأكواد</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Instructor" asp-controller="Video" asp-action="Index">
                                    <i class="fas fa-video"></i>
                                    <span>الفيديوهات</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Instructor" asp-controller="QuestionBank" asp-action="Index">
                                    <i class="fas fa-question-circle"></i>
                                    <span>بنك الأسئلة</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Instructor" asp-controller="Quiz" asp-action="Index">
                                    <i class="fas fa-tasks"></i>
                                    <span>الكويزات</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Instructor" asp-controller="Student" asp-action="Index">
                                    <i class="fas fa-users"></i>
                                    <span>الطلاب</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Instructor" asp-controller="Report" asp-action="Index">
                                    <i class="fas fa-chart-bar"></i>
                                    <span>التقارير</span>
                                </a>
                            </li>
                        </ul>
                    }
                    else if (User.IsInRole("Admin"))
                    {
                        <ul class="nav flex-column px-3 py-2">
                            <li class="nav-item">
                                <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard") ? "active" : "")"
                                   asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                                    <i class="fas fa-home"></i>
                                    <span>الرئيسية</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Instructors">
                                    <i class="fas fa-chalkboard-teacher"></i>
                                    <span>المدرسين</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Student" asp-action="Index">
                                    <i class="fas fa-user-graduate"></i>
                                    <span>الطلاب</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Subject" asp-action="Index">
                                    <i class="fas fa-book-open"></i>
                                    <span>المواد</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() == "GradeLevel") ? "active" : "")"
                                   asp-area="Admin" asp-controller="GradeLevel" asp-action="Index">
                                    <i class="fas fa-layer-group"></i>
                                    <span>المستويات</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() == "Branch") ? "active" : "")"
                                   asp-area="Admin" asp-controller="Branch" asp-action="Index">
                                    <i class="fas fa-code-branch"></i>
                                    <span>الشعب</span>
                                </a>
                            </li>
                        </ul>
                    }
                    else if (User.IsInRole("Student"))
                    {
                        <ul class="nav flex-column px-3 py-2">
                            <li class="nav-item">
                                <a class="nav-link @((ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard") ? "active" : "")"
                                   href="@Url.Action("Dashboard", "Student", new { area = "Student" })">
                                    <i class="fas fa-tachometer-alt"></i>
                                    <span>لوحة التحكم</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @((ViewContext.RouteData.Values["action"]?.ToString() == "MyEnrollments") ? "active" : "")"
                                   href="@Url.Action("MyEnrollments", "Student", new { area = "Student" })">
                                    <i class="fas fa-book-open"></i>
                                    <span>كورساتي</span>
                                </a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        }

        <!-- Main Content -->
        <main class="main-content flex-grow-1">
            @RenderBody()
        </main>
    </div>

    <!-- Footer - يظهر فقط إذا كان المستخدم مسجل دخوله -->
    @if (User.Identity?.IsAuthenticated == true)
    {
        <footer class="text-center py-3 text-muted small" style="margin-right: var(--sidebar-width);">
            <div class="container">
                &copy; @DateTime.Now.Year EduPlatform - جميع الحقوق محفوظة
            </div>
        </footer>
    }
    else
    {
        <footer class="text-center py-3 text-muted small">
            <div class="container">
                &copy; @DateTime.Now.Year EduPlatform - جميع الحقوق محفوظة
            </div>
        </footer>
    }

    <!-- Toast Container -->
    <div class="toast-container"></div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>